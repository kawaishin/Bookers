<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
					<%= form_for(@book) do |f| %>
						<% if @book.errors.any? %>
						  <div class="alert alert-warning">
						  	<h2><%= pluralize(@book.errors.count, "error") %>prohibited this obj from being saved:</h2>
						    <ul>
						      <% @book.errors.full_messages.each do |message| %>
						        <li><%= message %></li>
						      <% end %>
						    </ul>
						  </div>
						<% end %>


					<h4>Title</h4>
					<%= f.text_field :title, :class=>"col-xs-12" %>
					<h4>Opinion</h4>
					<%= f.text_field :body, :class=>"col-xs-12" %>
				<%= f.submit 'Update Book', :class=>"btn btn-primary col-xs-12" %>
				<% end %>
			 <%= link_to 'Show', book_path(@book.id) %>
			 <span>|</span>
			 <%= link_to 'Back', '/books'%>
			</div>
		</div>
	</div>
</div>
